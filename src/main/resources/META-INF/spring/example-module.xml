<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- ACTIONS -->
    <bean class="org.jahia.modules.example.actions.ExampleAction">
        <property name="name" value="exampleAction"/>
        <!-- Uncomment next line if you want your action to require the user to be logged
        <property name="requireAuthenticatedUser" value="true"/> -->
        <!-- Uncomment next line if you want your action to require a permission for being called
        <property name="requiredPermission" value="nameOfThePermissionToCheck"/> -->
        <!-- Uncomment next line if you want your action to require to be on a specific workspace for being called
        i.e. Action creating content only on "live" workspace (comments, blogs, wiki, ...)
        <property name="requiredWorkspace" value="live"/>-->
    </bean>

    <bean class="org.jahia.modules.example.actions.ActionReturningJson">
        <property name="name" value="actionReturningJson"/>
    </bean>

    <!-- CHOICE LIST INITIALIZER -->
    <bean id="exampleChoiceListInitializer"
          class="org.jahia.modules.example.initializers.ExampleChoiceListInitializer">
        <property name="key" value="exampleChoiceList"/>
    </bean>

</beans>